using System;

namespace afterTrening
{
    class Program
    {
        static void Main(string[] args)
        {
            {
                var n = int.Parse(Console.ReadLine());

                for (int i = 0; i <= n; i++)
                {
                    var space = new string(' ', n - i);
                    var stars = new string('*', i);

                    Console.Write(space);
                    Console.Write(stars);
                    Console.Write(" | ");
                    Console.Write(stars);
                    Console.WriteLine(space);
                }
            }
        }
    }
}
