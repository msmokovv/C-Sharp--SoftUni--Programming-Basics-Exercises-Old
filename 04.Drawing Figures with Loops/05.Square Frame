using System;

namespace FirtsWork
{
    class Program
    {
        static void Main(string[] args)
        {
            int n = int.Parse(Console.ReadLine());

            for (int r = 1; r <= n; r++)
            {
                if (r == 1)
                {
                    Console.Write("+");
                }
                else if (r == n)
                {
                    Console.Write(" +");
                }
                else
                {
                    Console.Write(" -");
                }
            }
            Console.WriteLine();

            for (int row = 1; row <= n - 2; row++)
            {
                for (int r = 1; r <= n; r++)
                {
                    if (r == 1)
                    {
                        Console.Write("|");
                    }
                    else if (r == n)
                    {
                        Console.Write(" |");
                    }
                    else
                    {
                        Console.Write(" -");
                    }                    
                }
                Console.WriteLine();
            }   

                for (int r = 1; r <= n; r++)
                {
                    if (r == 1)
                    {
                        Console.Write("+");
                    }
                    else if (r == n)
                    {
                        Console.Write(" +");
                    }
                    else
                    {
                        Console.Write(" -");
                    }
                }
                Console.WriteLine();
        }
    }
}
